<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.saxion.proj</groupId>
    <artifactId>truck-management-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Truck Management Parent</name>
    <description>Parent POM for Truck Fleet Management System</description>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.5</version>
        <relativePath/>
    </parent>


    <properties>
        <java.version>17</java.version>
    </properties>


    <!-- Modules -->
    <modules>
        <!-- CORE SERVICES -->
        <module>gateway-service</module>
        <module>driver-service</module>
        <module>order-service</module>
        <module>assignment-service</module>
        <module>tracking-service</module>
        <module>billing-service</module>
        <module>truck-service</module>
        <!-- SCALABILITY / INFRASTRUCTURE SERVICES -->
        <module>auth-service</module>
        <module>discovery-service</module>
        <module>log-monitoring</module>

        <!-- ADDITIONAL SERVICES -->
        <module>chat-service</module>
        <module>call-service</module>
        <module>notification-service</module>
        <module>payment-service</module>
        <module>analytics-service</module>
        <module>document-mgmt-service</module>
        <module>maintenance-service</module>
        <module>customer-service</module>
    </modules>

    <!-- Build plugins -->
    <build>
        <pluginManagement>
            <plugins>
                <!-- Spring Boot Maven plugin -->
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>3.5.5</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <!-- Maven Compiler plugin -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.11.0</version>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
